{
  "name": "digitaljs_schema",
  "version": "1.0.0",
  "description": "Verify digitaljs files",
  "main": "build/index.js",
  "author": "Jakub SzczerbiÅ„ski",
  "license": "MIT",
  "scripts": {
    "build_schema": "(echo 'export default' && ./node_modules/ts-json-schema-generator/bin/ts-json-schema-generator --path 'src/types.ts' --type Digitaljs) > src/schema.ts",
    "build": "yarn run build_schema && tsc"
  },
  "files": [
    "build/**/*.js",
    "src/**/*.ts"
  ],
  "dependencies": {
    "ajv": "^6.12.6"
  },
  "devDependencies": {
    "@types/ajv": "^1.0.0",
    "ts-json-schema-generator": "^0.78.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.1.2"
  }
}
